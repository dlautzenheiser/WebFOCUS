
-SET &CURRENT_CALENDAR_MONTH_NUMBER = &DATEM; 
-SET &CURRENT_CALENDAR_MONTH_DESC = &DATEMtr; 

-SET &NEXT_CALENDAR_MONTH_NUMBER = IF &CURRENT_CALENDAR_MONTH_NUMBER IS 12 THEN 1 ELSE &CURRENT_CALENDAR_MONTH_NUMBER + 1; 
-SET &NEXT_CALENDAR_MONTH_DESC = DECODE &NEXT_CALENDAR_MONTH_NUMBER (1 'January' 2 'February' 3 'March' 4 'April' 5 'May' 6 'June' 7 'July'
-                                                                    8 'August' 9 'September' 10 'October' 11 'November' 12 'December' ELSE 'BadMonth'); 

-SET &PREVIOUS_CALENDAR_MONTH_NUMBER = IF &CURRENT_CALENDAR_MONTH_NUMBER IS 1 THEN 12 ELSE &CURRENT_CALENDAR_MONTH_NUMBER - 1; 
-SET &PREVIOUS_CALENDAR_MONTH_DESC = DECODE &PREVIOUS_CALENDAR_MONTH_NUMBER (1 'January' 2 'February' 3 'March' 4 'April' 5 'May' 6 'June' 7 'July'
-                                                                    8 'August' 9 'September' 10 'October' 11 'November' 12 'December' ELSE 'BadMonth'); 

-TYPE Set the following variables:
-TYPE . CURRENT_CALENDAR_MONTH_NUMBER=&CURRENT_CALENDAR_MONTH_NUMBER / CURRENT_CALENDAR_MONTH_DESC=&CURRENT_CALENDAR_MONTH_DESC
-TYPE . NEXT_CALENDAR_MONTH_NUMBER=&NEXT_CALENDAR_MONTH_NUMBER / NEXT_CALENDAR_MONTH_DESC=&NEXT_CALENDAR_MONTH_DESC
-TYPE . PREVIOUS_CALENDAR_MONTH_NUMBER=&PREVIOUS_CALENDAR_MONTH_NUMBER / PREVIOUS_CALENDAR_MONTH_DESC=&PREVIOUS_CALENDAR_MONTH_DESC
